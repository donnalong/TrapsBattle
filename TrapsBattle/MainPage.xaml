<Page x:Class="TrapsBattle.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:controls="using:TrapsBattle.Controls"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:TrapsBattle"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      Loaded="Page_Loaded"
      mc:Ignorable="d">

  <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
        Padding="30">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>
    <Button x:Name="NewRoundButton"
            Grid.Row="0"
            Margin="10"
            BorderBrush="Black"
            BorderThickness="2"
            Click="NewRoundButton_Click"
            Content="Next Round" />

    <ListView x:Name="CharacterListView"
              Grid.Row="2"
              ItemsSource="{x:Bind Path=CharacterViewModels, Mode=OneWay}">
      <ListView.ItemTemplate>
        <DataTemplate>
          <controls:CharacterSheet x:Name="CharacterSheet"
                                   BorderBrush="Black"
                                   BorderThickness="2"
                                   CharacterViewModel="{Binding}" />
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
  </Grid>
</Page>
