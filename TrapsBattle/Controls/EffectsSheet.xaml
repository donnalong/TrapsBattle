<UserControl x:Class="TrapsBattle.Controls.EffectsSheet"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="using:TrapsBattle.Controls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="300"
             d:DesignWidth="400"
             mc:Ignorable="d">

  <Grid>
    <ListView x:Name="EffectSlotList"
              Grid.Column="1"
              Margin="10, 20"
              HorizontalAlignment="Center"
              ItemsSource="{x:Bind Path=EffectsSheetViewModel.Slots, Mode=OneWay}">
      <ListView.ItemTemplate>
        <DataTemplate>
          <local:EffectSlot Width="300"
                            MinHeight="150"
                            MaxWidth="300"
                            Margin="0, 0, 0, 10"
                            BorderBrush="Black"
                            BorderThickness="2"
                            EffectSlotViewModel="{Binding}" />
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
  </Grid>
</UserControl>
